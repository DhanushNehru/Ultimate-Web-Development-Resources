from PIL import Image, ImageDraw

# Create a blank image with a white background
width, height = 600, 600
image = Image.new("RGB", (width, height), "white")
draw = ImageDraw.Draw(image)

# Define colors for the Ludo board tiles
colors = ["#FF5733", "#298F1D", "#FDFD96", "#00A4E4"]

# Draw the Ludo board tiles
tile_width = width // 6
tile_height = height // 6
for row in range(6):
    for col in range(6):
        color = colors[(row + col) % len(colors)]
        x0, y0 = col * tile_width, row * tile_height
        x1, y1 = x0 + tile_width, y0 + tile_height
        draw.rectangle([x0, y0, x1, y1], fill=color)

# Draw lines to separate the tiles
for i in range(1, 6):
    draw.line([(0, i * tile_height), (width, i * tile_height)], fill="black", width=2)
    draw.line([(i * tile_width, 0), (i * tile_width, height)], fill="black", width=2)

# Save the image to a file
image.save("board.png")
